<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="root-menu" label="Openbox 3">
		<separator label="[        Openbox        ]"/>
		<item label="Xterm">
			<action name="Execute">
				<command>
					xterm
				</command>
			</action>
		</item>
		<item label="Firebox">
			<action name="Execute">
				<command>
					r-firefox
				</command>
			</action>
		</item>
		<item label="Run...">
			<action name="Execute">
				<command>
					fbrun
				</command>
			</action>
		</item>
                <item label="Paint the wall">
                        <action name="Execute">
                                <command>
                                    r-wallpapers-refresh
                                </command>
                        </action>
                </item>
		<menu id="apps-prefered" label="Prefered">
			<separator label="[        Prefered        ]"/>
			<item label="Amule">
				<action name="Execute">
					<command>
						amule
					</command>
				</action>
			</item>
			<item label="Deluge">
				<action name="Execute">
					<command>
						deluge
					</command>
				</action>
			</item>
			<item label="Evince">
				<action name="Execute">
					<command>
						evince
					</command>
				</action>
			</item>
			<item label="Liferea">
				<action name="Execute">
					<command>
						liferea
					</command>
				</action>
			</item>
			<item label="Vim">
				<action name="Execute">
					<command>
						xterm -e vim
					</command>
				</action>
			</item>
			<item label="GVim">
				<action name="Execute">
					<execute>
						gvim
					</execute>
				</action>
			</item>
			<item label="ZIM">
				<action name="Execute">
					<command>
						zim
					</command>
				</action>
			</item>
			<item label="Pidgin">
				<action name="Execute">
					<command>
						pidgin
					</command>
				</action>
			</item>
		</menu>
		<menu id="utils-menu" label="Utils">
			<separator label="[        Utils        ]"/>
			<item label="Rox">
				<action name="Execute">
					<command>
						rox
					</command>
				</action>
			</item>
			<item label="mc">
				<action name="Execute">
					<command>
						xterm -e mc
					</command>
				</action>
			</item>
			<item label="AlsaMixer">
				<action name="Execute">
					<command>
						xterm -e alsamixer
					</command>
				</action>
			</item>
			<item label="GTK-ChTheme">
				<action name="Execute">
					<command>
						gtk-chtheme
					</command>
				</action>
			</item>
			<item label="EXPORT">
				<action name="Execute">
					<command>
						/bin/sh -c 'export|xmessage -center -file -'
					</command>
				</action>
			</item>
		</menu>
		<!--  <menu id="apps-menu" label="Apps"/> -->
		<separator/>
		<menu id="openbox-menu" label="Openbox">
			<menu id="client-list-menu"/>
			<item label="ObConf">
				<action name="Execute">
					<startupnotify>
						<enabled>
							yes
						</enabled>
						<icon>
							openbox
						</icon>
					</startupnotify>
					<command>
						obconf
					</command>
				</action>
			</item>
			<item label="Reconfigure">
				<action name="Reconfigure"/>
			</item>
		</menu>
		<separator/>
		<item label="New Login">
			<action name="Execute">
				<command>
					gdmflexiserver
				</command>
			</action>
		</item>
		<item label="Logout">
			<action name="Exit"/>
		</item>
	</menu>
</openbox_menu>
